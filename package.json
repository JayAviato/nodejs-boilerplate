{
  "name": "nodets-boilerplate-aviato",
  "version": "1.0.2",
  "description": "Production-ready Node.js + TypeScript boilerplate with Clean Architecture",
  "main": "dist/main.js",
  "bin": {
    "nodets-boilerplate-aviato": "dist/cli.js"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JayAviato/nodejs-boilerplate.git"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "postinstall": "prisma generate --schema src/infrastructure/database/prisma/schema.prisma",
    "dev": "tsx watch src/main.ts",
    "build": "tsc && chmod +x dist/cli.js",
    "start": "node dist/main.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "db:generate": "prisma generate --schema src/infrastructure/database/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema src/infrastructure/database/prisma/schema.prisma",
    "db:push": "prisma db push --schema src/infrastructure/database/prisma/schema.prisma"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "clean-architecture",
    "boilerplate",
    "enterprise"
  ],
  "author": "JayAviato",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "@types/socket.io": "^3.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "degit": "^2.8.4",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "firebase-admin": "^13.6.0",
    "ora": "^9.2.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "prompts": "^2.4.2",
    "socket.io": "^4.8.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/degit": "^2.8.6",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/prompts": "^2.4.9",
    "prisma": "^5.10.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}